<div class="row collapsable-section">
{{#each this.tickets}}
    {{#if openDiv}}
        <div class="col-lg-6">
    {{/if}}
    <div class="card ticket shadow mb-4">
        <!-- Card Header - Accordion -->
        <a href="#collapseCardExample" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample">
<div class="row">
            <h6 class="m-0 font-weight-bold text-primary">{{title}}</h6>
                        <h6 class="m-0 font-weight-bold text-primary px-2">
                          <code class="ticket-time">{{timeLeft}}</code>
                        </h6>
</div>
        </a>
        <!-- Card Content - Collapse -->
        <div class="collapse show" id="collapseCardExample">
            <div class="card-body">
                {{description}}
                  <div class="row">
                <div class="deadline-date d-flex justify-content-center align-items-center">
                <text class="font-weight-bold text-warning center-text">Deadline:</text> {{deadlineUI}}
                </div>
              <div class="d-flex justify-content-center">
                {{#if assignee}}
                {{#if assignedToCurrent}}
                {{#if closed}}
                <span class="text">Closed</span>
                  {{else}}
                  <div id={{encodedID}} class="btn btn-success text-center btn-close-ticket">
                    <span class="text">Close</span>
                    </div>
                    {{/if}}
                {{else}}
                <a id={{encodedID}} href='#'>
                    Assigned to: {{assignee}}
                </a>
                {{/if}}
                {{else}}
                <div id={{encodedID}} class="btn btn-success text-center btn-take-ticket">
                    <span class="text">Take</span>
                </div>
                {{/if}}
              </div>
            </div>
            </div>
        </div>
    </div>
    {{#if closeDiv}}
        </div>
    {{/if}}
{{/each}}
</div>
