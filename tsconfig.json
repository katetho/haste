{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es5", "es6", "dom", "dom.iterable", "es2017"],
    "rootDir": "src",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "references": [{
    "path": "./src/server"
}]
}
