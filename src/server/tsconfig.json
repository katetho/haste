{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es5", "es6", "dom", "dom.iterable", "es2017"],
    "module": "commonjs",
    "outDir": "../../public/server",
    "rootDir": ".",
    "composite": true,
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
